<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="[ 좋은 사료와 물 ]"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_circle_line"
                android:orientation="vertical">//여기부터

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nb1"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:background="@drawable/survey_number"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:text="  1"
                        android:textColor="@color/colorWhite"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/q1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:gravity="top"
                        android:paddingTop="0dp"
                        android:text="여윈(수척 또는 부실) 개체의 두수가 얼마나 됩니까?"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/breed_batch_poor_Rate_a1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/edittext"
                        android:hint="숫자 입력"
                        android:imeOptions="actionDone"
                        android:inputType="number"></EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="전체 두수의 여윈 개체의 비율 "
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/breed_poor_Rate_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="세부기준점수"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/breed_poor_Rate_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />
            </LinearLayout>
            //여기까지 하나

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_circle_line"
                android:orientation="vertical">//여기부터

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nb2"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:background="@drawable/survey_number"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:text="  2"
                        android:textColor="@color/colorWhite"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/q2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:gravity="top"
                        android:paddingTop="0dp"
                        android:text="음수조의 수가 얼마나 됩니까?"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/breed_batch_water_Tank_Num_rdogrp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <RadioButton
                            android:id="@+id/breed_batch_water_Tank_Num_a2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="음수조 1개당 10두 이하 사용"
                            android:textSize="15dp"></RadioButton>

                        <RadioButton
                            android:id="@+id/breed_batch_water_Tank_Num_a2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="음수조 1개당 11두 이상 사용"
                            android:textSize="15dp"></RadioButton>
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>
            //여기까지 하나

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_circle_line"
                android:orientation="vertical">//여기부터

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nb3"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:background="@drawable/survey_number"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:text="  3"
                        android:textColor="@color/colorWhite"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/q3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:gravity="top"
                        android:paddingTop="0dp"
                        android:text="음수조의 위생상태가 어떻습니까?"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/breed_batch_water_Tank_Clean_rdogrp3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <RadioButton
                            android:id="@+id/breed_batch_water_Tank_Clean_a3_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="검사시 음수조 내부 이물질 없이 맑은 물 확인가능"
                            android:textSize="15dp"></RadioButton>

                        <RadioButton
                            android:id="@+id/breed_batch_water_Tank_Clean_a3_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="부분적 사료와 같은 이물질 보이나 신선한 물 확인가능"
                            android:textSize="15dp"></RadioButton>

                        <RadioButton
                            android:id="@+id/breed_batch_water_Tank_Clean_a3_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="이끼, 분변, 다량의 사료, 벌레 등 다수의 이물질로 인한 탁한 물 확인가능"
                            android:textSize="15dp"></RadioButton>
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>
            //여기까지 하나

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_circle_line"
                android:orientation="vertical">//여기부터

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nb4"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:background="@drawable/survey_number"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:text="  4"
                        android:textColor="@color/colorWhite"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/q4"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:gravity="top"
                        android:paddingTop="0dp"
                        android:text="음수 대기 우의 여부와 음수 시간은 어떠합니까?"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:layout_marginRight="10dp"
                        android:gravity="top"
                        android:paddingTop="0dp"
                        android:text="축사동 수를 선택하세요"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_breed_q4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="선택"
                            android:id="@+id/breed_btn_q4"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            //여기까지 하나
        </LinearLayout>
    </ScrollView>

</LinearLayout>